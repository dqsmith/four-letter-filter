{
	"manifest_version": 2,
	"name": "Four Letter Filter",
	"short_name": "Four Letter Filter",
	"description": "Filter bad words from the websites that you and your children are visiting.",
	"author": "DLSmith",
	"version": "1.1.0.0",
	"browser_action": {
		"default_icon": {
			"16": "assets/images/icon16.png",
			"24": "assets/images/icon24.png",
			"32": "assets/images/icon32.png",
			"48": "assets/images/icon48.png",
			"64": "assets/images/icon64.png",
			"128": "assets/images/icon128.png"
		},
		"default_title": "Four Letter Filter",
		"default_popup": "index.html"
	},
	"background": {
		"scripts": [
			"background.min.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"scripts": [
				"content.min.js"
			],
			"css": [
				"content.min.css"
			],
			"all_frames": true
		}
	],
	"permissions": [
		"storage",
		"activeTab",
		"webNavigation",
		"<all_urls>"
	]
}
